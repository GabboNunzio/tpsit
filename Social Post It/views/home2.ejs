<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Home</title>
</head>
<body>
    <h1>Home</h1>
    <form action="/post" method="POST">
        <textarea name="content" placeholder="Scrivi il tuo post..." required></textarea>
        <button type="submit">Pubblica</button>
    </form>
    <h2>Post Recenti</h2>
    <div>
        <% posts.forEach(post => { %>
            <div><strong>Utente:</strong> <%= post.user %> - <%= post.content %></div>
        <% }) %>
    </div>
</body>
</html>
